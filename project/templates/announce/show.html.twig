{% extends 'base.html.twig' %}

{% block title %}DealGames - {{ announce.title }}{% endblock %}

{% block body %}
<div class="example-wrapper">

    <a href="{{ path('announce.index') }}"><svg xmlns="http://www.w3.org/2000/svg" height="24px"
            viewBox="0 -960 960 960" width="24px" fill="#000000">
            <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
        </svg>Revenir en arrière</a>

    <h1> {{ announce.title }} </h1>

    <h2>Publié par {{ announce.author }},</h2>

    <h4>le {{ announce.published|date("j F, H:i") }}</h4>

    <h5>{{ announce.category|capitalize }}</h5>

    <p>
        {{ announce.description }}
    </p>

    {% if app.user %}
    <div>
        <a href="{{ path('announce.edit', {id: announce.id}) }}" class="btn btn-lg btn-primary">Modifer mon annonce</a>
        <form action="{{ path('announce.delete', {id: announce.id}) }}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" href="{{ path('announce.delete', {id: announce.id}) }}" class="btn btn-lg btn-danger">Supprimer mon annonce</button>
        </form>
    </div>
    {% endif %}

</div>
{% endblock %}