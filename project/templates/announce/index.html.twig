{% extends 'base.html.twig' %}

{% block title %}DealGames - Annonces{% endblock %}

{% block body %}
{% if app.user %}
<div>
    <a href="{{ path('announce.index') }}" class="btn btn-lg btn-success">Ajouter une annonce</a>
</div>
{% endif %}

<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for announce in announces %}
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ announce.title }}</h5>
                <h6><span class="badge text-bg-secondary">{{ announce.category|capitalize }}</span></h6>
                <a href="{{ path('announce.show', {id: announce.id}) }}" class="card-link">Voir plus</a>
            </div>
            <div class="card-footer">
                <small class="text-body-secondary">Publi√©e le {{ announce.published|date("j F, H:i") }}</small>
            </div>
        </div>
    </div>
    {% endfor %}

</div>
{% endblock %}